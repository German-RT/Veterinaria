@model Veterinaria.Models.Mascota

<h2>Registrar Mascota</h2>
<form asp-action="Registrar" method="post">
    <div>
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" />
        <span asp-validation-for="Nombre"></span>
    </div>
    <div>
        <label asp-for="Tipo"></label>
        <input asp-for="Tipo" />
    </div>
    <div>
        <label asp-for="Edad"></label>
        <input asp-for="Edad" />
    </div>
    <button type="submit">Registrar</button>
</form>

<a asp-action="Lista">Ver mascotas registradas</a>