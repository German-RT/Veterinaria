@model Veterinaria.Models.Mascota

@{
    ViewData["Title"] = "Registrar Mascota";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white text-center">
            <h3>Registrar Mascota</h3>
        </div>
        <div class="card-body">
            <form asp-action="Registrar" method="post">
                <div class="mb-3">
                    <label class="form-label">Nombre</label>
                    <input asp-for="Nombre" class="form-control" placeholder="Ej. Firulais" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Tipo</label>
                    <input asp-for="Tipo" class="form-control" placeholder="Ej. Perro" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Edad</label>
                    <input asp-for="Edad" type="number" class="form-control" placeholder="Ej. 3" required />
                </div>
                <div class="text-end">
                    <button type="submit" class="btn btn-success">Guardar</button>
                    <a asp-action="Lista" class="btn btn-secondary">Volver</a>
                </div>
            </form>
        </div>
    </div>
</div>
